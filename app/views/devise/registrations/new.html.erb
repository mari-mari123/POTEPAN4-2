<div class="container device">
  <div class="device_frame">
    <p class="my-4">新しいアカウントを作成</p>
    <div class="device_inner">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "new_user") do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="field form-row">
          <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "ユーザー名", class: "form-control col-12 px-2" %>
        </div>
        <div class="field form-row">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Eメール", class: "form-control col-12 px-2" %>
        </div>
        <div class="field form-row">
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード", class: "form-control col-12 px-2" %>
        </div>
        <div class="field form-row">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード確認", class: "form-control col-12 px-2" %>
        </div>
        <div class="actions">
          <%= f.submit "新しいアカウントを作成", class: "form-control btn-primary my-4 " %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>



