<div class="top">
  <div class="top-main">
    <div class="container">
      <div class="row col-lg-6">
        <div class="form-fream">
          <div class="form-area">
            <p class="form-area-title mb-4">Potepan Shareでまだ体験したことない旅をしよう</p>
            <%= form_with url: "/rooms/search/result", method: :get do |f| %>
              <%= f.label :word, "エリア" %>
              <%= f.text_field :word, placeholder: "東京", class: "form-control mb-4" %>
              <%= f.submit "探す", class: "form-control btn-primary mb-4", role: "button" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="panel-area m-5">
      <h1 class="section-title">おすすめのエリア</h1>
      <div class="row">
        <div class="panel-item col-lg-3 col-6">
          <%= link_to rooms_search_result_path(word: "東京") do %><span>東京</span>
          <%= image_tag "/assets/img_tokyo.jpg", class: "panel-image" %>
          <% end %>
        </div>
        <div class="panel-item col-lg-3 col-6">
          <%= link_to rooms_search_result_path(word: "大阪") do %><span>大阪</span>
          <%= image_tag "/assets/img_osaka.jpg", class: "panel-image" %>
          <% end %>
        </div>
        <div class="panel-item col-lg-3 col-6">
          <%= link_to rooms_search_result_path(word: "京都") do %><span>京都</span>
          <%= image_tag "/assets/img_kyoto.jpg", class: "panel-image" %>
          <% end %>
        </div>
        <div class="panel-item col-lg-3 col-6">
          <%= link_to rooms_search_result_path(word: "札幌") do %><span>札幌</span>
          <%= image_tag "/assets/img_sapporo.jpg", class: "panel-image"%>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>